{
  "compilerOptions": {
    "outDir": "compiled",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./",
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "altinn-shared/*": ["./shared/*"],
      "@altinn/schema-editor/*": ["./packages/schema-editor/src/*"],
      "test/*": ["./test/*"],
      "features/*": ["./*/features/*"],
      "common/*": ["./*/common/*"],
      "services/*": ["./services/*"],
      "test/*": ["./test/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
