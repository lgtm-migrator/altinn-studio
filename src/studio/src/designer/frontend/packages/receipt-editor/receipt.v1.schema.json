{
  "$id": "https://altinncdn.no/schemas/json/layout/receipt.schema.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Receipt Page",
  "description": "The schema defining the receipt page content",
  "type": "object",
  "properties": {
    "heading": {
      "type": "string",
      "default": "Kvittering",
      "examples": ["Kvittering"]
    },
    "subheading": {
      "type": "string",
      "examples": ["Skattemeldingen 2021 er sendt inn", "Elevunders√∏kelsen er sendt inn"]
    },
    "summaryTable": {
      "type": "array",
      "title": "The summary data",
      "description": "A summary table showing instance data.",
      "items": {
        "type": "object",
        "properties": {
          "labelTextResourceBinding": {
            "type": "string",
            "title": "The text resource binding for the label of the element showed in the table"
          },
          "valueDataModelBinding": {
            "type": "string",
            "title": "Data model bindings for a "
          }
        }
      },
      "default": [
        {
          "labelTextResourceBinding": "receipt.date_sent",
          "valueDataModelBinding": "instancemetadata.date_sent"
        },
        {
          "labelTextResourceBinding": "receipt.sender",
          "valueDataModelBinding": "instancemetadata.sender"
        },
        {
          "labelTextResourceBinding": "receipt.receiver",
          "valueDataModelBinding": "instancemetadata.receiver"
        },
        {
          "labelTextResourceBinding": "receipt.ref_num",
          "valueDataModelBinding": "instancemetadata.ref_num"
        }
      ]
    },

    "attachmentTable": {
      "properties": {
        "collapsibleTitle": {
          "type": "string"
        },
        "hideCollapsibleCount": {
          "type": "boolean",
          "default": false
        }
      }
    }
  },
  "required": ["heading", "type"]
}
